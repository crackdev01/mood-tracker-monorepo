{
  "name": "ui-mood-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:dev": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' -c .eslintrc.js",
    "test:unit": "react-scripts test --coverage --watchAll=false",
    "test:unit:watch": "react-scripts test",
    "test:e2e": "cypress run",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "apexcharts": "^3.25.0",
    "axios": "^0.21.1",
    "dayjs": "^1.10.4",
    "i18next": "^19.8.9",
    "i18next-xhr-backend": "^3.2.2",
    "jwt-decode": "^3.1.2",
    "node-sass": "^5.0.0",
    "react": "^17.0.1",
    "react-apexcharts": "^1.3.7",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.7",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.12.13",
    "@testing-library/dom": "^7.29.6",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/redux-logger": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "cypress": "^6.5.0",
    "dom-testing-library": "^5.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "identity-obj-proxy": "^3.0.0",
    "prettier": "^2.2.1",
    "redux-saga-test-plan": "^4.0.1",
    "ts-jest": "^26.5.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.d.ts",
      "!src/**/types.ts",
      "!src/index.tsx",
      "!src/i18n.ts",
      "!src/mood.types.ts",
      "!src/**/reportWebVitals.ts",
      "!src/__tests__/fixtures.ts",
      "!src/__tests__/unit/api/core.mock.ts"
    ],
    "moduleNameMapper": {
      "react-i18next": "<rootDir>/src/__mocks__/i18nextMock.ts"
    },
    "testMatch": [
      "**/**/__tests__/**/*.spec.ts?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 78,
        "branches": 64,
        "functions": 60,
        "lines": 79
      }
    },
    "coverageReporters": [
      "lcov",
      "text"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
